        </androidx.cardview.widget.CardView>

        <!-- Performance -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
